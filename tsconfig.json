{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "docs",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@scroll/lib": ["lib"]
    }
  },
  "exclude": ["node_modules", "docs"]
}
