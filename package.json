{
  "version": "0.0.1",
  "name": "scroll",
  "author": "Zeev Katz",
  "description": "",
  "license": "MIT",
  "main": "src/main.ts",
  "scripts": {
    "build": "yarn run build:prod",
    "build:dev": "webpack --mode development --config ./webpack.config.js --progress --color --display-error-details",
    "build:prod": "cross-env ENVIRONMENT=production webpack --mode production --config ./webpack.config.js  --progress  --color --display-error-details --bail",
    "postbuild": "node postbuild.js",
    "clean": "yarn cache clear && rimraf -- docs",
    "server": "yarn run server:dev",
    "server:dev": "webpack-dev-server --mode development --config ./webpack.config.js --hot --inline --progress --watch --open",
    "server:prod": "cross-env ENVIRONMENT=production webpack-dev-server --mode production --config ./webpack.config.js --port 3000 --host 0.0.0.0 --hot --inline --progress  --watch --open --content-base docs/",
    "start": "yarn run server:dev",
    "test": "karma start"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.53",
    "archiver": "^3.1.1",
    "autoprefixer": "^9.6.1",
    "awesome-typescript-loader": "^5.2.0",
    "cross-env": "^5.0.1",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.10",
    "ejs-loader": "^0.3.0",
    "eslint": "^5.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-inline-source-plugin": "^0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^7.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^7.3.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.22.1",
    "sugarss": "^2.0.0",
    "terser-webpack-plugin": "^2.0.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^3.0.1",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "anix": "^0.3.1",
    "custom-elements-ts": "^0.0.16"
  }
}
